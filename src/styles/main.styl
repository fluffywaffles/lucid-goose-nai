@import 'includes/fonts'

html, body
  height 100%
  margin 0

body
  background #fafafa
  font-family 'Helvetica Neue', Helvetica, sans-serif
  color #333
  padding-top 50px
  height calc(100% - 50px)
  font-size 16px

h3
  font-style italic
  font-weight lighter

a
  text-decoration none
  color slateblue

  &:visited
    color slateblue
  &:active
    color slateblue
    text-shadow 0 0 10px lighten(slateblue, 50%)

main
  width 100%
  height 80%
  margin 50px 0
  display inline-table
  table-layout fixed
  overflow hidden
  .content
    display table-cell
    vertical-align middle
    position relative
    .card
      width 100%
      max-width 760px
      transition max-height ease-in-out 1s
      margin 0 auto
      padding 20px
      background white
      border-radius 2px
    .details
      max-height 0
      padding 0
      overflow hidden
      padding 0 20px
      &.active
        max-height 100%

account-nav
  position fixed
  z-index 10
  top 0
  height 50px
  width 100%
  background darken(white, 0.5%)
  transition all ease 0.5s

  &:hover
    height 60px
    ul
      padding-top 5px

  ul
    transition all ease 0.5s
    list-style-type none
    li
      transition all ease 1s
      float left
      padding 0 20px
      cursor pointer
      &+li
        border-left 1px solid black

project-details
  .pileup
    display inline-table
    width 100%
    table-layout fixed
    .block
      display table-cell

technician-list
  display block
  border-top 1px solid lightgray
  padding-bottom 20px
  ul
    technician
      display inline-table
      table-layout fixed
      width 100%
      span u
        text-decoration none
        border-bottom 1px dotted #333
        cursor help
      span, button
        display table-cell
      button
        cursor pointer
        transition all ease 0.3s
        width 100%
        text-align center
        background none
        border-style solid
        border-width 1px
        padding 5px 0
        background #f5f5f5
        &:hover
          background #fff
        outline none
        &:active
          outline none
          border-color lighten(red, 40%)
    technician[action^='Assign'] button:active
      border-color lighten(green, 60%)

.back-button
  left -100px
  top 0
  position absolute
  cursor pointer
  font-size 1rem
