@import 'includes/fonts'

html, body
  height 100%
  margin 0

body
  background #fafafa
  font-family 'Helvetica Neue', Helvetica, sans-serif
  color #333
  display inline-table
  width 100%
  padding-top 50px
  font-size 16px

h3
  font-style italic
  font-weight lighter

a
  text-decoration none
  color slateblue

  &:visited
    color slateblue
  &:active
    color slateblue
    text-shadow 0 0 10px lighten(slateblue, 50%)

main
  display table-cell
  vertical-align middle
  .content
    position relative
    padding 20px
    max-width 600px
    margin 0 auto
    background white
    border-radius 2px

account-nav
  position fixed
  top 0
  height 50px
  width 100%
  background darken(white, 0.5%)
  transition all ease 0.5s

  &:hover
    height 60px
    ul
      padding-top 5px

  ul
    transition all ease 0.5s
    list-style-type none
    li
      float left
      padding 0 20px
      cursor pointer
      &+li
        border-left 1px solid black

      &:last-child a
        color #333
        cursor default

technicians
  display block
  border-top 1px solid lightgray
  ul
    li
      display inline-table
      table-layout fixed
      width 100%
      span, button
        display table-cell
      button
        width 100%
        text-align center
        background none
        border-style solid
        border-width 1px
        padding 5px 0
        &:hover
          background #eee

.back-button
  left -100px
  top 0
  position absolute
  cursor pointer
  font-size 1rem
